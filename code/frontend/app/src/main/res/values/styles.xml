<?xml version="1.0" encoding="utf-8"?>
<!-- In res/values/styles.xml -->
<resources>
    <!-- If you have an existing AppTheme, keep it. Add these styles below it. -->
    <!-- Example: <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar"> ... </style> -->

    <style name="Widget.App.InfoCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item> <!-- Makes cards share space equally in LinearLayout -->
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <!-- Add app:cardBackgroundColor or app:strokeColor if needed -->
    </style>

    <style name="Widget.App.InfoCardContent" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="Widget.App.InfoCardIcon" parent="">
        <item name="android:layout_width">48dp</item> <!-- Or your desired icon size -->
        <item name="android:layout_height">48dp</item> <!-- Or your desired icon size -->
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="Widget.App.InfoCardTitle" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textAppearance">?attr/textAppearanceSubtitle1</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>
