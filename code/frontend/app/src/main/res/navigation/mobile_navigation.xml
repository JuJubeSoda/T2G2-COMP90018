<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_home"> <!-- Sets HomeFragment as the starting point -->

    <!-- Home Destination -->
    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.myapplication.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home"> <!-- Or tools:layout="@layout/home" if your file is home.xml -->

        <!-- Action to navigate from Home to UploadFragment -->
        <action
            android:id="@+id/action_navigation_home_to_uploadFragment"
            app:destination="@id/navigation_upload" />

        <!-- Action to navigate from Home to MyGardenFragment -->
        <action
            android:id="@+id/action_navigation_home_to_myGardenFragment"
            app:destination="@id/navigation_my_garden" />

        <!-- Action to navigate from Home to PlantMapFragment -->
        <action
            android:id="@+id/action_navigation_home_to_plantMapFragment"
            app:destination="@id/navigation_plant_map" />

        <!-- Action to navigate from Home to PlantWikiFragment -->
        <action
            android:id="@+id/action_navigation_home_to_plantWikiFragment"
            app:destination="@id/navigation_plant_wiki" />

        <!-- You can also navigate to an Activity -->
        <!-- <action
            android:id="@+id/action_navigation_home_to_mainActivity2"
            app:destination="@id/mainActivity2" /> -->

    </fragment>

    <!-- Upload Destination -->
    <fragment
        android:id="@+id/navigation_upload"
        android:name="com.example.myapplication.ui.myplants.UploadFragment"
        android:label="Upload Plant"
        tools:layout="@layout/captureplant" /> <!-- Replace with your actual UploadFragment layout -->

    <!-- My Garden Destination (Example, similar to Dashboard) -->
    <fragment
        android:id="@+id/navigation_my_garden"
        android:name="com.example.myapplication.ui.myplants.MyGardenFragment"
        android:label="My Garden"
        tools:layout="@layout/mycollection" /> <!-- Replace with your actual MyGardenFragment layout -->

    <!-- Plant Map Destination (Example, similar to Notifications) -->
    <fragment
        android:id="@+id/navigation_plant_map"
        android:name="com.example.myapplication.ui.myplants.PlantMapFragment"
        android:label="Plant Map"
        tools:layout="@layout/activity_maps" /> <!-- Replace with your actual PlantMapFragment layout -->

    <!-- Plant Wiki Destination -->
    <fragment
        android:id="@+id/navigation_plant_wiki"
        android:name="com.example.myapplication.ui.myplants.PlantWikiFragment"
        android:label="Plant Wiki"
        tools:layout="@layout/mycollection" /> <!-- Replace with your actual PlantWikiFragment layout -->

    <!-- Example of an Activity destination (if you had one defined) -->
    <!-- <activity
        android:id="@+id/mainActivity2"
        android:name="com.example.myapplication.MainActivity2"
        android:label="MainActivity2"
        tools:layout="@layout/activity_main2"/> -->

</navigation>
