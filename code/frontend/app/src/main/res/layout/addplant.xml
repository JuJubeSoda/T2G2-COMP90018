<?xml version="1.0" encoding="utf-8"?>
<!-- Root ConstraintLayout for the "Add Plant" screen.
     Defines the basic structure and padding for the screen. -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- ImageButton serving as a 'Back' button to navigate to the previous screen.
         Positioned at the top-start of the layout. -->
    <ImageButton
        android:id="@+id/backButtonAddPlant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/quantum_ic_arrow_back_grey600_24"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="8dp"/>

    <!-- TextView displaying the main title of the screen: "Add Plant".
         Aligned to the right of the back button and vertically centered with it. -->
    <TextView
        android:id="@+id/pageTitleAddPlant"
        android:layout_width="136dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:gravity="center_horizontal"
        android:text="Add Plant"
        android:textColor="?attr/colorOnSurface"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/backButtonAddPlant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.041"
        app:layout_constraintStart_toEndOf="@+id/backButtonAddPlant"
        app:layout_constraintTop_toTopOf="@+id/backButtonAddPlant"
        app:layout_constraintVertical_bias="1.0" />

    <!-- TextView acting as a label for the scientific name input field.
         Positioned below the top bar elements. -->
    <TextView
        android:id="@+id/labelScientificName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scientific Name"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/backButtonAddPlant"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- TextInputLayout providing a Material Design container for the search input field.
         Used for entering the scientific name to search. -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/searchScientificNameLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="331dp"
        android:layout_height="58dp"
        android:layout_marginTop="8dp"
        app:hintEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelScientificName">

        <!-- TextInputEditText where the user types the scientific name for searching.
             Includes a hint and configures IME options for search action. -->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/searchScientificNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter scientific name to search"
            android:imeOptions="actionSearch"
            android:inputType="textCapWords"
            android:maxLines="1" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- RecyclerView for displaying the list of search results for scientific names.
         Initially set to 'gone' and made visible when search results are available.
         tools:visibility and tools:itemCount are for design-time preview. -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewScientificNames"
        android:layout_width="377dp"
        android:layout_height="459dp"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchScientificNameLayout"
        app:layout_constraintVertical_bias="0.0"
        tools:itemCount="5"
        tools:visibility="visible" />

    <!-- ProgressBar displayed while search results are being loaded.
         Centered within the bounds of the RecyclerView.
         Initially set to 'gone' and made visible during loading. -->
    <ProgressBar
        android:id="@+id/progressBarSearch"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@+id/recyclerViewScientificNames"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerViewScientificNames"
        app:layout_constraintStart_toStartOf="@+id/recyclerViewScientificNames"
        app:layout_constraintEnd_toEndOf="@+id/recyclerViewScientificNames"/>

    <!-- TextView for displaying status messages like "No results found" or initial prompt.
         Centered within the bounds of the RecyclerView.
         Initially set to 'gone' or shows a prompt, and visibility/text changes based on search status.
         tools:visibility="visible" allows previewing this TextView in the layout editor. -->
    <TextView
        android:id="@+id/textViewSearchStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type to search for scientific names."
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@+id/recyclerViewScientificNames"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerViewScientificNames"
        app:layout_constraintStart_toStartOf="@+id/recyclerViewScientificNames"
        app:layout_constraintEnd_toEndOf="@+id/recyclerViewScientificNames"
        tools:visibility="visible"/>

    <!-- ImageView, possibly a search icon or similar, positioned next to the search input field. -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="40dp"
        android:layout_height="52dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="14dp"
        app:layout_constraintBottom_toTopOf="@+id/recyclerViewScientificNames"
        app:layout_constraintStart_toEndOf="@+id/searchScientificNameLayout"
        app:srcCompat="@drawable/search_foreground" />

</androidx.constraintlayout.widget.ConstraintLayout>
