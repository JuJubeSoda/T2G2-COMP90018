<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#F1F8E9">

    <ImageButton
        android:id="@+id/backButtonAddPlant"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/quantum_ic_arrow_back_grey600_24"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Back"
        android:padding="8dp"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Page title -->
    <TextView
        android:id="@+id/pageTitleAddPlant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Add Known Plant"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/backButtonAddPlant"
        app:layout_constraintStart_toEndOf="@+id/backButtonAddPlant"
        app:layout_constraintTop_toTopOf="@+id/backButtonAddPlant" />

    <TextView
        android:id="@+id/labelScientificName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scientific Name"
        android:textColor="@color/textPrimary"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/backButtonAddPlant"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="@color/primaryColor"
        android:padding="14dp"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="@+id/searchScientificNameLayout"
        app:layout_constraintBottom_toBottomOf="@+id/searchScientificNameLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/plus_foreground" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/searchScientificNameLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="@color/primaryColor"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:boxBackgroundColor="@android:color/white"
        app:startIconTint="@color/primaryColor"
        app:layout_constraintEnd_toStartOf="@id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelScientificName">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/searchScientificNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionSearch"
            android:inputType="textCapWords"
            android:maxLines="1"
            android:textColor="@color/textPrimary"
            android:textSize="16sp"
            android:hint="Search scientific name..." />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewScientificNames"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_list_background"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/searchScientificNameLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:itemCount="5"
        tools:listitem="@android:layout/simple_list_item_1"
        tools:visibility="visible" />

    <ProgressBar
        android:id="@+id/progressBarSearch"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@+id/recyclerViewScientificNames"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerViewScientificNames"
        app:layout_constraintStart_toStartOf="@+id/recyclerViewScientificNames"
        app:layout_constraintEnd_toEndOf="@+id/recyclerViewScientificNames" />

    <TextView
        android:id="@+id/textViewSearchStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type to search for scientific names."
        android:textColor="@color/primaryDark"
        android:textSize="15sp"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="@+id/recyclerViewScientificNames"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerViewScientificNames"
        app:layout_constraintStart_toStartOf="@+id/recyclerViewScientificNames"
        app:layout_constraintEnd_toEndOf="@+id/recyclerViewScientificNames"
        tools:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>


