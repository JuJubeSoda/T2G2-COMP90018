<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/backButtonAddPlant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/quantum_ic_arrow_back_grey600_24"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="8dp"/>

    <!-- Page Title "Add Plant" -->
    <TextView
        android:id="@+id/pageTitleAddPlant"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Add Plant"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="@+id/backButtonAddPlant"
        app:layout_constraintBottom_toBottomOf="@+id/backButtonAddPlant"
        app:layout_constraintStart_toEndOf="@+id/backButtonAddPlant"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"/>

    <!-- "Scientific Name" Label -->
    <TextView
        android:id="@+id/labelScientificName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scientific Name"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/backButtonAddPlant"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Search Input Field -->

    <!-- RecyclerView for displaying search results -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/searchScientificNameLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="331dp"
        android:layout_height="58dp"
        android:layout_marginTop="8dp"
        app:hintEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelScientificName">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/searchScientificNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter scientific name to search"
            android:imeOptions="actionSearch"
            android:inputType="textCapWords"
            android:maxLines="1" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Progress bar for loading search results -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewScientificNames"
        android:layout_width="377dp"
        android:layout_height="459dp"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchScientificNameLayout"
        app:layout_constraintVertical_bias="0.0"
        tools:itemCount="5"
        tools:visibility="visible" />

    <ProgressBar
        android:id="@+id/progressBarSearch"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@+id/recyclerViewScientificNames"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerViewScientificNames"
        app:layout_constraintStart_toStartOf="@+id/recyclerViewScientificNames"
        app:layout_constraintEnd_toEndOf="@+id/recyclerViewScientificNames"/>

    <!-- TextView for "No results found" or other messages -->
    <TextView
        android:id="@+id/textViewSearchStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type to search for scientific names."
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@+id/recyclerViewScientificNames"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerViewScientificNames"
        app:layout_constraintStart_toStartOf="@+id/recyclerViewScientificNames"
        app:layout_constraintEnd_toEndOf="@+id/recyclerViewScientificNames"
        tools:visibility="visible"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="40dp"
        android:layout_height="52dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="14dp"
        app:layout_constraintBottom_toTopOf="@+id/recyclerViewScientificNames"
        app:layout_constraintStart_toEndOf="@+id/searchScientificNameLayout"
        app:srcCompat="@drawable/search_foreground" />

</androidx.constraintlayout.widget.ConstraintLayout>
