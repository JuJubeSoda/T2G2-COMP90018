<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#F3F6F2"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:padding="20dp"
        android:gravity="top"
        android:layout_margin="8dp"
        android:layout_gravity="center"
        android:clipToOutline="true">

        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/tv_garden_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Garden Information"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/tv_garden_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Garden Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/brand_teal"
            android:layout_marginBottom="6dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter garden name"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:layout_marginBottom="12dp"
            android:inputType="text" />

        <TextView
            android:id="@+id/tv_garden_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="6dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Enter description"
            android:gravity="top|start"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:inputType="textMultiLine"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/tv_garden_coords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Coordinates"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="6dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter coordinates"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:inputType="text"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="24dp">

            <Button
                android:id="@+id/btn_garden_navigate"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Navigate"
                android:minHeight="48dp"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/btn_garden_view_plants"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="View Plants"
                android:minHeight="48dp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
