<?xml version="1.0" encoding="utf-8"?>
<!-- 1. WRAP everything in a NestedScrollView -->
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Your original LinearLayout goes inside the scroll view -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".ui.myplants.plantWiki.PlantWikiOverview">

        <!-- Introduction Text Body -->
        <TextView
            android:id="@+id/overview_intro_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:lineSpacingExtra="4sp"
            tools:text="The Monstera Deliciosa, often called the Swiss Cheese Plant..."
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge" />

        <!-- 2x2 Matrix of Custom Buttons -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:columnOrderPreserved="false"
            android:rowCount="2">

            <!-- Item 1: Top-Left -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/light_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/light_icon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_sun"
                        app:tint="?attr/colorPrimary"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/light_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Light"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/light_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Bright, indirect"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Item 2: Top-Right (Water - Non-clickable) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/water_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:clickable="false"
                android:focusable="false"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/water_icon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_water"
                        app:tint="?attr/colorPrimary"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/water_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Water"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/water_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Weekly"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Item 3: Bottom-Left -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/temperature_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/temperature_icon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_thermometer"
                        app:tint="?attr/colorPrimary"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/temperature_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Temperature"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/temperature_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="18-27 Â°C"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Item 4: Bottom-Right -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/humidity_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/humidity_icon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_humidity"
                        app:tint="?attr/colorPrimary"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/humidity_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Humidity"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/humidity_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="High"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </GridLayout>

        <!-- Sensor Reading Legend -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#F5F5F5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š Sensor Reading Guide"
                    android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <!-- Light Legend -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â˜€ï¸ Light:"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  â€¢ Very Bright: > 10,000 lx\n  â€¢ Bright: 1,000 - 10,000 lx\n  â€¢ Moderate: 100 - 1,000 lx\n  â€¢ Low Light: &lt; 100 lx"
                    android:textSize="11sp"
                    android:lineSpacingExtra="2dp" />

                <!-- Temperature Legend -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŒ¡ï¸ Temperature:"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  â€¢ Very Hot: > 30Â°C\n  â€¢ Warm: 24 - 30Â°C\n  â€¢ Moderate: 18 - 24Â°C\n  â€¢ Cool: 12 - 18Â°C\n  â€¢ Cold: &lt; 12Â°C"
                    android:textSize="11sp"
                    android:lineSpacingExtra="2dp" />

                <!-- Humidity Legend -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’§ Humidity:"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  â€¢ Very High: > 70%\n  â€¢ High: 60 - 70%\n  â€¢ Moderate: 40 - 60%\n  â€¢ Low: &lt; 40%"
                    android:textSize="11sp"
                    android:lineSpacingExtra="2dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
