<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EAF6EA"
    android:padding="0dp"
    tools:context=".ui.myplants.myGarden.PlantDetailFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_margin="16dp"
        android:elevation="3dp"
        android:background="@android:color/white"
        android:clipToOutline="true">

        <ImageView
            android:id="@+id/landingimage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:contentDescription="Image of the plant"
            tools:src="@tools:sample/backgrounds/scenic" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        android:background="@android:color/white"
        android:elevation="2dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="12dp"
        android:clipToOutline="true">

        <TextView
            android:id="@+id/plant_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monstera Deliciosa"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            android:letterSpacing="0.02"
            tools:text="Monstera Deliciosa" />

        <TextView
            android:id="@+id/plant_nickname_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Swiss Cheese Plant"
            android:textColor="#666666"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            tools:text="Swiss Cheese Plant" />
    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:tabIndicatorColor="?attr/colorPrimary"
        app:tabSelectedTextColor="?attr/colorPrimary"
        app:tabTextColor="#888888"
        app:tabIndicatorHeight="3dp"
        android:elevation="2dp"
        android:paddingHorizontal="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp" />



</LinearLayout>

