<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAF6EA"
    android:fillViewport="true"
    tools:context=".ui.myplants.uploadPlants.UploadCompleteFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:id="@+id/textViewPageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Complete"
            android:textColor="#222222"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageViewPlantPreview"
            android:layout_width="0dp"
            android:layout_height="230dp"
            android:layout_marginTop="20dp"
            android:contentDescription="Uploaded plant image"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toBottomOf="@id/textViewPageTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:src="@tools:sample/backgrounds/scenic" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineLabelEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.35" />

        <TextView
            android:id="@+id/labelScientificName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Scientific Name:"
            android:textColor="#333333"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/imageViewPlantPreview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guidelineLabelEnd" />

        <TextView
            android:id="@+id/textViewScientificName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="#555555"
            app:layout_constraintBaseline_toBaselineOf="@id/labelScientificName"
            app:layout_constraintStart_toEndOf="@id/guidelineLabelEnd"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Quercus robur" />

        <TextView
            android:id="@+id/labelIntroduction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Introduction:"
            android:textColor="#333333"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/textViewScientificName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guidelineLabelEnd" />

        <TextView
            android:id="@+id/textViewIntroduction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:lineSpacingExtra="4sp"
            android:textColor="#555555"
            app:layout_constraintTop_toTopOf="@id/labelIntroduction"
            app:layout_constraintStart_toEndOf="@id/guidelineLabelEnd"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="A large deciduous tree, native to most of Europe west of the Caucasus." />

        <TextView
            android:id="@+id/labelLocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Location:"
            android:textColor="#333333"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/textViewIntroduction"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guidelineLabelEnd" />

        <TextView
            android:id="@+id/textViewLocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="#555555"
            app:layout_constraintBaseline_toBaselineOf="@id/labelLocation"
            app:layout_constraintStart_toEndOf="@id/guidelineLabelEnd"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Royal Botanic Gardens" />

        <TextView
            android:id="@+id/textViewDiscoveredBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="Discovered by: Jonathan"
            android:textColor="#666666"
            android:textSize="13sp"
            app:layout_constraintTop_toBottomOf="@id/labelLocation"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: 2025-09-01"
            android:textColor="#666666"
            android:textSize="13sp"
            app:layout_constraintBaseline_toBaselineOf="@id/textViewDiscoveredBy"
            app:layout_constraintEnd_toEndOf="parent" />

        <Space
            android:id="@+id/spacer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/textViewDiscoveredBy"
            app:layout_constraintBottom_toTopOf="@id/buttonUploadMore"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/buttonUploadMore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Upload More"
            android:textAllCaps="true"
            android:minHeight="48dp"
            android:backgroundTint="?attr/colorPrimary"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toTopOf="@id/buttonGatherMoreInfo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/buttonGatherMoreInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Gather More Information"
            android:textAllCaps="true"
            android:minHeight="48dp"
            android:backgroundTint="#A5D6A7"
            android:textColor="#1B5E20"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
