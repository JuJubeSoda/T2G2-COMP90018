<?xml version="1.0" encoding="utf-8"?>
<!-- Root MaterialCardView: Defines a compact card layout, likely for displaying a "discovery" item. -->
<!-- This card has a fixed width (160dp) and wraps its content height. -->
<!-- Margins are applied for spacing, and it features rounded corners and elevation for a Material Design look. -->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <!-- ConstraintLayout within the card to arrange its content (image and text). -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- ImageView to display the photo of the discovery item. -->
        <!-- It spans the width of the card and has a fixed height. -->
        <!-- android:scaleType="centerCrop" ensures the image fills the bounds, cropping if necessary. -->
        <!-- tools:srcCompat provides a sample image for design-time preview. -->
        <!-- android:contentDescription provides an accessible label for the image. -->
        <ImageView
            android:id="@+id/image_discovery_photo"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:srcCompat="@tools:sample/backgrounds/scenic"
            android:contentDescription="Discovery item image" />

        <!-- TextView to display the name of the discovery item. -->
        <!-- Positioned below the image, with appropriate margins. -->
        <!-- Uses Subtitle2 text appearance. -->
        <!-- android:maxLines="1" and android:ellipsize="end" ensure the name fits on one line, adding "..." if too long. -->
        <!-- tools:text provides sample text for design-time preview. -->
        <TextView
            android:id="@+id/text_discovery_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textAppearance="?attr/textAppearanceSubtitle2"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@+id/image_discovery_photo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Beautiful Rose" />

        <!-- TextView to display distance information related to the discovery item. -->
        <!-- Positioned below the discovery name, with appropriate margins. -->
        <!-- Uses Caption text appearance. -->
        <!-- tools:text provides sample text for design-time preview. -->
        <TextView
            android:id="@+id/text_discovery_distance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:textAppearance="?attr/textAppearanceCaption"
            app:layout_constraintTop_toBottomOf="@+id/text_discovery_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="0.5 km away" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
