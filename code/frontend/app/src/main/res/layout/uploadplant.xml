<?xml version="1.0" encoding="utf-8"?>
<!-- Root ConstraintLayout for the entire screen. -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Back navigation button. -->
    <ImageButton
        android:id="@+id/backButtonUpload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Back"
        android:padding="16dp"
        app:srcCompat="@drawable/quantum_ic_arrow_back_grey600_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Title text for the screen. -->
    <TextView
        android:id="@+id/titleTextViewUpload"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Upload the Discovery"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toEndOf="@+id/backButtonUpload"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/backButtonUpload"
        app:layout_constraintBottom_toBottomOf="@+id/backButtonUpload" />

    <!-- ScrollView to contain the main form content, allowing it to scroll if needed. -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@+id/backButtonUpload"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Inner ConstraintLayout to structure the content within the ScrollView. -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- ImageView for displaying a preview of the plant image. -->
            <ImageView
                android:id="@+id/plantImageViewPreview"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:contentDescription="Plant image preview"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

            <!-- EditText for entering the plant's scientific name. -->
            <EditText
                android:id="@+id/editTextScientificName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:hint="Scientific Name"
                android:inputType="textCapWords"
                android:imeOptions="actionNext"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/plantImageViewPreview" />

            <!-- EditText for entering the location where the plant was found. -->
            <EditText
                android:id="@+id/editTextLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Location (e.g., Park Name, City)"
                android:inputType="textCapWords"
                android:imeOptions="actionNext"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextScientificName" />

            <!-- EditText for entering a multi-line introduction or description of the plant. -->
            <EditText
                android:id="@+id/editTextIntroduction"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="top"
                android:hint="Introduction (Describe your discovery)"
                android:inputType="textMultiLine|textCapSentences"
                android:minLines="3"
                android:maxLines="6"
                android:scrollHorizontally="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextLocation" />

            <!-- EditText for entering search tags related to the plant. -->
            <EditText
                android:id="@+id/editTextSearchTags"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Tags (e.g., flower, rare, park)"
                android:inputType="text"
                android:imeOptions="actionDone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextIntroduction" />

            <!-- Button to trigger the upload process. -->
            <Button
                android:id="@+id/uploadButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"
                android:text="Upload and Add to Collection"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextSearchTags"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Include directive to embed the success overlay layout. -->
    <include
        android:id="@+id/successOverlay"
        layout="@layout/uploadplantsuccess"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible"/>
</androidx.constraintlayout.widget.ConstraintLayout>
