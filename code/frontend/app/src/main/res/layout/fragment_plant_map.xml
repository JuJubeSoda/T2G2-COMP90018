<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- PlantId Search Bar (visible only in Plant mode) -->
    <LinearLayout
        android:id="@+id/plant_id_search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#CCFFFFFF"
        android:elevation="4dp">

        <EditText
            android:id="@+id/et_plant_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Enter Plant ID"
            android:inputType="number"
            android:maxLines="1" />

        <Button
            android:id="@+id/btn_search_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Map Fragment Container -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        tools:layout="@layout/fragment_plant_map" />

    <!-- Controls Container -->
    <LinearLayout
        android:id="@+id/refresh_controls_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:padding="8dp">
        
        <!-- Data Type Toggle Button -->
        <Button
            android:id="@+id/btn_toggle_data_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŒ± Plants"
            android:textSize="12sp"
            android:padding="8dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:layout_marginTop="4dp"
            android:background="@android:color/holo_orange_light"
            android:textColor="@android:color/white" />

        <!-- Back to Gardens Button -->
        <Button
            android:id="@+id/btn_back_to_gardens"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â†© Back to Gardens"
            android:textSize="12sp"
            android:padding="8dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:layout_marginTop="4dp"
            android:background="@android:color/holo_green_light"
            android:textColor="@android:color/white"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Floating Action Button for Places -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_places"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_location_24"
        android:contentDescription="Move to current location"
        android:backgroundTint="@color/brand_teal"
        android:tint="@android:color/white"
        android:elevation="4dp" />

    <!-- Bottom sheet container -->
    <!-- Note: Bottom sheet content is dynamically managed by PlantMapFragment -->
    <!-- using PlantBottomSheetDialogFragment and GardenBottomSheetDialogFragment -->

</RelativeLayout>
