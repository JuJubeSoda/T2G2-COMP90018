<?xml version="1.0" encoding="utf-8"?>
<!--
    Bottom sheet layout for displaying plant information
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="16dp">

    <!-- Handle bar for dragging -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:background="@android:color/darker_gray" />

    <!-- Title -->
    <TextView
        android:id="@+id/tv_plant_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Plant Information"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp" />

    <!-- Plant Name -->
    <TextView
        android:id="@+id/tv_plant_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Plant Name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_green_dark"
        android:layout_marginBottom="8dp" />

    <!-- Description -->
    <TextView
        android:id="@+id/tv_plant_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginBottom="8dp" />

    <!-- Scientific Name (new) -->
    <TextView
        android:id="@+id/tv_plant_scientific_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scientific Name"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray" />

    <!-- Actions row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btn_plant_navigate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Navigate" />

        <Button
            android:id="@+id/btn_plant_like"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="Like" />

        <Button
            android:id="@+id/btn_plant_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="Share" />

        <Button
            android:id="@+id/btn_plant_more"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="More" />
    </LinearLayout>

</LinearLayout>

